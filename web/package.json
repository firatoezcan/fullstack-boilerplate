{
  "name": "@stack/web",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "next-dev": "NODE_OPTIONS='--inspect' DOTENV_CONFIG_PATH=../.env node -r dotenv/config $(yarn bin next) dev",
    "next": "DOTENV_CONFIG_PATH=../.env node -r dotenv/config $(yarn bin next)",
    "dev": "yarn next-dev",
    "build": "yarn next build",
    "start": "yarn next start",
    "test": "jest --watch ",
    "test:ci": "jest --ci --reporters=default --reporters=jest-junit --collectCoverage --passWithNoTests",
    "codegen": "DOTENV_CONFIG_PATH=../.env graphql-codegen -r dotenv/config --config codegen.yml",
    "lint": "next lint && eslint --ext .ts,.tsx --cache --fix .",
    "tslint": "tsc --noEmit --incremental"
  },
  "dependencies": {
    "@babel/plugin-transform-modules-commonjs": "^7.15.4",
    "@stack/ui": "0.0.1",
    "eslint-config-next": "^12.0.2",
    "graphql": "^16.1.0",
    "joi": "^17.5.0",
    "next": "^12.0.7",
    "next-i18next": "^9.2.0",
    "next-transpile-modules": "^9.0.0",
    "next-urql": "^3.3.2",
    "ts-loader": "^9.2.6",
    "ttypescript": "^1.5.13",
    "typescript-is": "^0.19.0",
    "urql": "^2.0.6"
  },
  "devDependencies": {
    "@graphql-codegen/add": "^3.1.0",
    "@graphql-codegen/cli": "^2.3.0",
